<%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => Student %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:student_first_name) %></dt>
      <dd><pre class="prettyprint"><%= @student.student_first_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:student_surname_name) %></dt>
      <dd><pre class="prettyprint"><%= @student.student_surname_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:parent_name) %></dt>
      <dd><pre class="prettyprint"><%= @student.parent_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:parent_email) %></dt>
      <dd><pre class="prettyprint"><%= @student.parent_email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:student_email) %></dt>
      <dd><pre class="prettyprint"><%= @student.student_email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mobile_number) %></dt>
      <dd><pre class="prettyprint"><%= @student.mobile_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:full_address) %></dt>
      <dd><pre class="prettyprint"><%= @student.full_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sick_or_holiday) %></dt>
      <dd><pre class="prettyprint"><%= @student.sick_or_holiday %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:daily_arrival) %></dt>
      <dd><pre class="prettyprint"><%= @student.daily_arrival %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comments) %></dt>
      <dd><pre class="prettyprint"><%= @student.comments %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              students_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_path(@student), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_path(@student),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

