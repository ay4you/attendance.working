<%- model_class = Parent -%>
<div class="page-header">
  <h1><%=t '.title', :default => Parent %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th><%= model_class.human_attribute_name(:fullname) %></th>
    <th><%= model_class.human_attribute_name(:email) %></th>
    <th><%= model_class.human_attribute_name(:title) %></th>
    <th><%= model_class.human_attribute_name(:mobile_number) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.id %></td>
        <td><%= parent.fullname %></td>
        <td><%= parent.email %></td>
        <td><%= parent.title %></td>
        <td><%= parent.mobile_number %></td>
        <td><%=l parent.created_at, format: :long %></td>
        <td>
          <%= link_to parent_path(parent), :class => 'btn btn-warning', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
              <%= label_tag "Edit" %>
          <%- end -%>
          <%= link_to parent_path(parent), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
              <%= label_tag "Delete" %>
          <%- end -%>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_parent_path,
            :class => 'btn btn-primary' %>
