<%- model_class = Parent -%>
<div class="page-header">
  <h1><%=t '.title', :default => Parent %></h1>
</div>

<div class="fieldset">
  <dl>
    <dt class="label label-default"><%= model_class.human_attribute_name(:fullname) %></dt>
    <dd><pre class="prettyprint"><%= @parent.fullname %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
    <dd><pre class="prettyprint"><%= @parent.email %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
    <dd><pre class="prettyprint"><%= @parent.title %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:mobile_number) %></dt>
    <dd><pre class="prettyprint"><%= @parent.mobile_number %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:student_id) %></dt>
    <dd><pre class="prettyprint"><%= Student.find(@parent.student_id).student_surname_name %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              parents_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_parent_path(@parent), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              parent_path(@parent),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

