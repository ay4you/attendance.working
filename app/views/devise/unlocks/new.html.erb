<h2>Resend unlock instructions</h2>

<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "form-horizontal form-user" }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>


    <div class="form-group">
      <%= f.label :email, "email", class: "control-label col-md-2" %>
      <div class="col-md-6">
        <%= f.text_field :email,required: true, autofocus: true, class: "text-field form-control", html: {spellcheck: "false"} %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-4 col-md-8">
        <%= f.submit "Resend unlock instructions", class: "btn btn-primary" %>
      </div>
    </div>
<% end %>

<div class="col-md-offset-1 col-md-8">
  <%= render "devise/shared/links" %>
</div>
