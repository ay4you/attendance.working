<%- model_class = Workload -%>
<div class="page-header">
  <h1><%=t '.title', :default => Workload %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:comments) %></th>
      <th><%= model_class.human_attribute_name(:image_path) %></th>
      <th><%= model_class.human_attribute_name(:score) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @workloads.each do |workload| %>
      <tr>
        <td><%= workload.id %></td>
        <td><%= workload.name %></td>
        <td><%= workload.comments %></td>
        <td><%= workload.image_path %></td>
        <td><%= workload.score %></td>
        <td><%=l workload.created_at, format: :long %></td>
        <td>
          <%= link_to workload_path(workload), :class => 'btn btn-warning', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
              <%= label_tag "Edit" %>
          <%- end -%>
          <%= link_to workload_path(workload), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
              <%= label_tag "Delete" %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_workload_path,
            :class => 'btn btn-primary' %>
