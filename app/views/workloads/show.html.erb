<%- model_class = Workload -%>
<div class="page-header">
  <h1><%=t '.title', :default => Workload %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @workload.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comments) %></dt>
      <dd><pre class="prettyprint"><%= @workload.comments %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:image_path) %></dt>
      <dd><pre class="prettyprint"><%= @workload.image_path %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:score) %></dt>
      <dd><pre class="prettyprint"><%= @workload.score %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              workloads_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_workload_path(@workload), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              workload_path(@workload),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

