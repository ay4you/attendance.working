<%= form_for @teacher, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :fullname, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :fullname, required: true, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.email_field :email, required: true, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, required: true, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mobile_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :mobile_number, required: true, :class => 'text-field form-control' %>
    </div>
  </div>

    <div class="form-group">
      <%= f.label :image_path, :class => 'control-label col-md-2' %>
      <div class="input-group">
  <span class="input-group-btn">
    <span class="btn btn-small btn-primary btn-inverse" onclick="$(this).parent().find('input[type=file]').click();">Browse</span>
    <%= f.file_field :image_path, onchange: "$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\\\|/]/).pop());", style: "display: none;" %>
  </span>
        <span class="form-control"></span>
      </div>
    </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  teachers_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
