<%= form_for @result, :html => { :multipart => true, :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-8">
      <%= f.text_field :name, required: true, :class => 'text-field form-control' %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :student_id, :class => 'control-label col-md-2' %>
      <div class="btn-group open">
        <%= f.collection_select(:student_id, @student.all, :id, :student_surname_name, {}, {:class => 'form-control selectpicker'}) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :workload_id, :class => 'control-label col-md-2' %>
      <div class="btn-group open">
        <%= f.collection_select(:workload_id, @workload.all, :id, :name, {}, {:class => 'form-control selectpicker'}) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :report_id, :class => 'control-label col-md-2' %>
      <div class="btn-group open">
        <%= f.collection_select(:report_id, @report.all, :id, :name, {}, {:class => 'form-control selectpicker'}) %>
      </div>
    </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  results_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
