<%= form_for @report, :html => {  :multipart => true, :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-8">
      <%= f.text_field :name, required: true, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :semester, :class => 'control-label col-md-2' %>
    <div class="btn-group open">
      <%= f.select(:semester, options_for_select([ '1', '2', '3']), {:prompt => 'Select One'} , {:class => 'selectpicker form-control'}) %>
    </div>
  </div>

    <div class="form-group">
      <%= f.label :grade_id, :class => 'control-label col-md-2' %>
      <div class="btn-group open">
        <%= f.collection_select(:grade_id, @grade.all, :id, :grade_name, {}, {:class => 'selectpicker form-control', :id => 'countries_select'}) %>
      </div>
    </div>




    <!--<%= select_tag :first_select, options_from_collection_for_select(@grade, :id, :grade_name), :'data-remote' => 'true', :'data-url' => url_for(:controller => ReportsController, :action => 'getdata'), :'data-type' => 'json'  %>-->


    <!--<%= select_tag :second_select, options_from_collection_for_select(@student.all, :id, :student_surname_name)  %>-->



    <div class="form-group">
      <%= f.label :student_id, :class => 'control-label col-md-2' %>
      <div class="btn-group open">
        <%= f.collection_select(:student_id, @student.all, :id, :student_surname_name, {}, {:class => 'selectpicker form-control'}) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :subject_id, :class => 'control-label col-md-2' %>
      <div class="btn-group open">
        <%= f.collection_select(:subject_id, @subject.all, :id, :subject_name, {}, {:class => 'selectpicker form-control'}) %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :class_year, :class => 'control-label col-md-2' %>
    <div class="btn-group open">
      <%= f.date_select(:class_year, {:order => [:month, :year]}, {:class => 'selectpicker form-control'}) %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  reports_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
